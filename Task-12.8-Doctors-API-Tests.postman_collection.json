									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response contains doctor details', function () {",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.id).to.equal(pm.environment.get('doctorId'));",
									"    pm.expect(responseJson).to.have.property('firstName');",
									"    pm.expect(responseJson).to.have.property('lastName');",
									"    pm.expect(responseJson).to.have.property('fullName');",
									"    pm.expect(responseJson).to.have.property('specialty');",
									"    pm.expect(responseJson).to.have.property('createdAt');",
									"});",
									"",
									"pm.test('Full name is correctly formatted', function () {",
									"    const responseJson = pm.response.json();",
									"    const expectedFullName = responseJson.firstName + ' ' + responseJson.lastName;",
									"    pm.expect(responseJson.fullName).to.equal(expectedFullName);",
									"});"
